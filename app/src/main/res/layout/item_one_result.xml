<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/mySearchSuggestionImageView"
		android:layout_width="35dp"
		android:layout_height="35dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/mySearchSuggestionTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:fontFamily="@font/alef"
		android:text="asdasdsadsa"
		android:textSize="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/mySearchSuggestionImageView"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="10dp"
		android:background="#a5ada7"
		app:layout_constraintTop_toBottomOf="@+id/mySearchSuggestionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>