<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/instructionImage"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="?attr/selectableItemBackground"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/myInstructionTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/alef"
		android:text="asdasdsadsaaaaaasaaa"
		android:textSize="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/instructionImage"
		app:layout_constraintRight_toLeftOf="@id/instructionAudio"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		android:id="@+id/instructionAudio"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="?attr/selectableItemBackground"
		android:src="@drawable/ic_baseline_music_note_24"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="10dp"
		android:background="#a5ada7"
		app:layout_constraintTop_toBottomOf="@+id/myInstructionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>