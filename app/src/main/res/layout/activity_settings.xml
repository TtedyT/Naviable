<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/app_bar"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_arrow_back_48"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        />

    <View
        android:id="@+id/campus_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_settings_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar" />

    <TextView
        android:id="@+id/choose_campus_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/campus_bar"
        app:layout_constraintBottom_toBottomOf="@id/campus_bar"
        app:layout_constraintLeft_toLeftOf="@id/campus_bar"
        app:layout_constraintRight_toRightOf="@id/campus_bar"
        android:text="@string/choose_campus_text"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.03"
        />

    <Spinner
        android:id="@+id/campus_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/campus_bar"
        app:layout_constraintEnd_toEndOf="@id/campus_bar"
        app:layout_constraintStart_toEndOf="@id/choose_campus_text"
        app:layout_constraintTop_toTopOf="@id/campus_bar"
        app:layout_constraintHorizontal_bias="0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="@+id/campus_bar"
        app:layout_constraintEnd_toEndOf="@+id/campus_bar"
        app:layout_constraintStart_toEndOf="@+id/campus_spinner"
        app:layout_constraintTop_toTopOf="@+id/campus_bar"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>